{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main class="p-5">

    <div class="row">
        <div class="col-12 mb-5">
            <div class="card">
                <div class="pt-2 pb-2">
                    <div class="nav">
                        {{#each navigation.links}}
                        <div class="nav-item">
                            <a href="{{href}}" class="nav-link {{#if @last}} disabled{{/if}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-12 mb-4">
            <div class="row">
                <div class="col-8">
                    <div class="card-body">
                        <h1 class="mb-5">{{header}}</h1>
                        {{#with contacts_data}}
                        <h3>{{title}}</h3>
                        <div class="pt-2">
                            <div class="nav">
                                {{#each buttons}}
                                <div class="nav-item me-3">
                                    <p><button href="#" {{#if isPrimary}} class="btn btn-warning text-light" {{else}}
                                            class="btn btn-outline-warning" {{/if}}>{{text}}</button></p>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        {{#with form}}
                        {{#with input}}
                        <div class="col-6 mb-2">
                            {{#with surname}}
                            <label class="form-label">{{label}}</label>
                            <div class="form-control text-secondary"> {{placeholder}}</div>
                            <div class="form text">{{caption}}</div>
                            {{/with}}
                        </div>
                        <div class="col-6 mb-2">
                            {{#with name}}
                            <label class="form-label">{{label}}</label>
                            <div class="form-control text-secondary"> {{placeholder}}</div>
                            <div class="form text">{{caption}}</div>
                            {{/with}}
                        </div>
                        <div class="col-6 pt-1 mb-3">
                            {{#with phone}}
                            <label class="form-label">{{label}}</label>
                            <div class="form-control text-secondary"> {{placeholder}}</div>
                            <div class="form text">{{caption}}</div>
                            {{/with}}
                        </div>
                        <div class="col-6 pt-1 mb-3">
                            {{#with email}}
                            <label class="form-label">{{label}}</label>
                            <div class="form-control text-secondary"> {{placeholder}}</div>
                            <div class="form text">{{caption}}</div>
                            {{/with}}
                        </div>
                        {{/with}}
                        <hr>

                        <div class="col-12 mb-2">
                            {{#each switch}}
                            <p>
                            <div class="form-check form-switch">
                                <label class="form-check-label">{{text}}</label>
                                <input name="isActive" type="checkbox" class="form-check-input">
                            </div>
                            </p>
                            {{/each}}
                        </div>
                        <hr>
                    </div>
                    {{/with}}
                    {{/with}}

                    <div class="col-12 pt-2 mb-4">
                        <div class="row">
                            {{#with delivery}}
                            <h3>{{title}}</h3>
                            <div class="card">
                                <div class="row">
                                    {{#each select}}
                                    <div class=" col-6 pt-2 pb-2">
                                        <label class="form-label">{{label}}</label>

                                        <select class="form-select">
                                            <option selected>{{placeholder}}</option>
                                            {{#each options}}
                                            <option value="value">{{text}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>

                            <div class="col-12 pt-3 mb-4">
                                {{#each delivery_type}}
                                <div class="form-check">
                                    <label class="form-check-label">{{type}}</label>
                                    <input name="delivery" type="radio" class="form-check-input">
                                </div>
                                {{/each}}
                            </div>
                            <hr>

                            <div class="col-12 pt-2 mb-2">
                                {{#with payment}}
                                <h3>{{title}}</h3>
                                {{#each list}}
                                <p>
                                <div class="form-check">
                                    <label class="form-check-label">{{type}}</label>
                                    <input name="delivery" type="radio" class="form-check-input">
                                </div>
                                <div class="form text">{{description}}</div>
                                </p>
                                {{/each}}
                                {{/with}}
                            </div>
                            <hr>

                            <div class="col-12 pt-2 mb-2">
                                <div class="row">
                                    {{#with contact}}
                                    <h3>{{title}}</h3>
                                    <div class="col-6 pt-1">
                                        {{#with surname}}
                                        <label class="form-label">{{label}}</label>
                                        <div class="form-control text-secondary"> {{placeholder}}</div>
                                        <div class="form text">{{caption}}</div>
                                        {{/with}}
                                    </div>
                                    <div class="col-6 pt-1">
                                        {{#with name}}
                                        <label class="form-label">{{label}}</label>
                                        <div class="form-control text-secondary"> {{placeholder}}</div>
                                        <div class="form text">{{caption}}</div>
                                        {{/with}}
                                    </div>
                                    <div class="col-6 pt-1">
                                        {{#with phone}}
                                        <label class="form-label">{{label}}</label>
                                        <div class="form-control text-secondary"> {{placeholder}}</div>
                                        <div class="form text">{{caption}}</div>
                                        {{/with}}
                                    </div>
                                    <div class="col-6 pt-1">
                                        {{#with email}}
                                        <label class="form-label">{{label}}</label>
                                        <div class="form-control text-secondary"> {{placeholder}}</div>
                                        <div class="form text">{{caption}}</div>
                                        {{/with}}
                                    </div>
                                    {{/with}}
                                </div>
                            </div>
                            <hr>

                            <div class="col-12 pt-1 mb-4">
                                {{#with coment}}
                                <label class="form-label">{{label}}</label>
                                <div class="form-control text-secondary"> {{placeholder}}</div>
                                {{/with}}
                            </div>
                            {{/with}}
                            <hr>

                            {{#with coupon}}
                            <div class="card-body">
                                <div class="row">
                                    <h3>{{title}}</h3>
                                    <div class=" pt-2 pb-2">
                                        {{#with select}}
                                        <div class="nav-item">
                                            {{#with availabel_coupon}}
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select-lg col-12">
                                                <option selected>{{placeholder}}</option>
                                                {{#each options}}
                                                <option value="value">{{text}}</option>
                                                {{/each}}
                                            </select>
                                            {{/with}}
                                        </div>
                                    </div>


                                    <div class=" pt-2 pb-2">
                                        <div class="nav-item">
                                            {{#with friend_coupon}}
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select-sm col-12">
                                                <option selected>{{placeholder}}</option>
                                                {{#each options}}
                                                <option value="value">{{text}}</option>
                                                {{/each}}
                                                <div class="form text">{{caption}}</div>
                                            </select>
                                            {{/with}}
                                        </div>
                                        {{/with}}

                                        <div class="row">
                                            {{#with add}}
                                            <div class="col-12 pt-3">
                                                {{#with friend}}
                                                <label class="form-label">{{label}}</label>
                                                <div class="form-control form-control-lg text-secondary">
                                                    {{placeholder}}
                                                </div>
                                                <div class="form text">{{caption}}</div>
                                                {{/with}}
                                            </div>
                                            <div class="col-12 pt-3 mb-3">
                                                {{#with colleague}}
                                                <label class="form-label">{{label}}</label>
                                                <div class="form-control form-control-sm text-secondary">
                                                    {{placeholder}}
                                                </div>
                                                <div class="form text">{{caption}}</div>
                                                {{/with}}
                                            </div>
                                            {{/with}}
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                            {{/with}}

                            <div class="col-12 pt-2">
                                {{#with quiz}}
                                <h3>{{title}}</h3>
                                {{#with preference}}
                                <div class="form-label">{{title}}</div>
                                {{#each options}}
                                <div class="form-check">
                                    <label class="form-check-label mb-1">{{this}}</label>
                                    <input name="delivery" type="radio" class="form-check-input">
                                </div>
                                {{/each}}
                                {{/with}}

                                <div class="col-12 pt-2 mb-2">
                                    {{#with your_expirience}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control text-secondary"> {{placeholder}}
                                    </input>
                                    {{/with}}
                                </div>

                                <div class="col-12 pt-2 mb-2">
                                    <div class="nav-item">
                                        {{#with purchase_frequency}}
                                        <label class="form-label">{{label}}</label>
                                        <select class="form-select-sm col-12 text-secondary">
                                            <option selected>{{placeholder}}</option>
                                            {{#each options}}
                                            <option value="value">{{text}}</option>
                                            {{/each}}
                                            <div class="form text">{{caption}}</div>
                                        </select>
                                        {{/with}}
                                    </div>
                                </div>

                                <div class="col-12 pt-1 mb-1">
                                    {{#with factors}}
                                    <div class="form-label">{{title}}</div>
                                    {{#each options}}
                                    <div class="form-check">
                                        <label class="form-check-label mb-1">{{this}}</label>
                                        <input name="options" type="checkbox" class="form-check-input">
                                    </div>
                                    {{/each}}
                                    {{/with}}
                                </div>
                                {{/with}}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-4 mt-5">
                    <div class="row">
                        <div class="col-12 mt-5">
                            <div class="alert alert-light">
                                {{#each action_block}}
                                <div class="nav-item py-2">
                                    <button href="#" {{#if isSuccess}} class="btn btn-success text-light" {{/if}} {{#if
                                        isDanger}} class="btn btn-danger" {{/if}} {{#if isInfo}}
                                        class="btn btn-info text-light" {{/if}}>{{text}}</button>
                                </div>
                                {{/each}}
                            </div>
                        </div>

                        <div class="col-12 mt-1">
                            <div class="alert alert-light text-black">
                                {{#with total}}
                                <h3>{{title}}</h3>
                                {{#each item_list}}
                                <div class="nav-item ">
                                    <a>{{name}}: {{price}}</a>
                                </div>
                                {{/each}}
                                <hr>

                                {{#each additional_info}}
                                <div class="nav-item">
                                    <a>{{text}}: {{value}}</a>
                                </div>
                                {{/each}}
                                <hr>

                                {{#with total_price}}
                                <div class="nav-item">
                                    <a>{{text}}: {{value}}</a>
                                </div>
                                {{/with}}
                                <hr>

                                {{#each button}}
                                <div class="nav-item">
                                    <p><button href="#" {{#if isPrimary}} class="btn btn-primary " {{else}}
                                            class="btn btn-outline-primary" {{/if}}>{{text}}</button></p>
                                </div>
                                {{/each}}
                                {{/with}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
    </div>

    <div class="col-12">
        <div class="row g-1">
            {{#each footer}}
            <div class="col-2">
                <div class="row g-5">
                    <div class="nav">
                        <div class="nav-item">
                            {{#each this}}

                            <a href="{{link}}" class="nav-link {{#if @last}} disabled{{/if}}">{{text}}</a>

                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</main>




