{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with program.excursion}}
    <div>
        <h1>{{name}}</h1>
    </div>

    <div>
        <address>{{location.city}}, {{location.country}}</address>
        <p>Date: <time>{{date}}</time></p>
    </div>
    <br>
    <hr>

    <div>
        <h2>Program:</h2>
    </div>
    <ul>
        {{#with program.[0]}}
        <li>
            <p>Name: <em>{{name}}</em></p>
            <p>Type: <em>{{type}}</em></p>
            <p>Duration: <em>{{duration}}</em></p>
        </li>
        <br>
        <hr>

        <div>
            <h3>Details:</h3>
        </div>
        <ul>
            {{#with details.museum}}
            <li>
                <p>Name: <em>{{name}}</em></p>
                <address>{{location.address}}, {{location.city}}, {{location.country}}</address>
            </li>
            <br>
            <hr>

            <div>
                <h4>Exhibits:</h4>
            </div>
            <ul>
                {{#each exhibits}}
                <li>
                    <p>Name: <em>{{name}}</em></p>
                    <p>Artist: <em>{{artist}}</em></p>
                    <p>Description: <em>{{description}}</em></p>
                    {{#if audio_guide}}<p>Audio guide</p>{{/if}}
                </li>
                {{/each}}
                {{/with}}
            </ul>

            <br>
            <hr>

            <div>
                <h5>Guide:</h5>
            </div>
            <ul>
                {{#with details.guide}}
                <li>
                    <p>Name: <em>{{name}}</em></p>
                    <p>Language: <em>{{language}}</em></p>
                    <p>Rating: <em>{{rating}} </em></p>
                </li>
                {{/with}}
                {{/with}}
            </ul>
        </ul>
    </ul>
    <br>
    <hr>

    <div>
        <h2>Program:</h2>
    </div>
    <ul>
        {{#with program.[1]}}
        <li>
            <p>Name: <em>{{name}}</em></p>
            <p>Type: <em>{{type}}</em></p>
            <p>Duration: <em>{{duration}}</em></p>
        </li>
        <br>
        <hr>

        <div>
            <h3>Details:</h3>
        </div>
        <ul>
            {{#with details.venue}}
            <li>
                <p>Name: <em>{{name}}</em></p>
                <address>{{location.address}}, {{location.city}}, {{location.country}}</address>
            </li>
            {{/with}}
            <br>
            <hr>

            <div>
                <h4>Performers:</h4>
            </div>
            <ul>
                {{#with details}}
                {{#each performers}}
                <li>
                    <p>Name: <em>{{name}}</em></p>
                    <p>Type: <em>{{type}}</em></p>
                </li>
                {{/each}}
                {{/with}}
            </ul>
            <br>
            <hr>

            <div>
                <h5>Guide:</h5>
            </div>
            <ul>
                {{#with details.guide}}
                <li>
                    <p>Name: <em>{{name}}</em></p>
                    <p>Language: <em>{{language}}</em></p>
                    <p>Rating: <em>{{rating}}</em></p>
                </li>
                {{/with}}
                {{/with}}
                {{/with}}
            </ul>
        </ul>
    </ul>
    <br>
    <hr>
</div>


