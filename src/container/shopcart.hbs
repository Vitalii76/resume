{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main class="p-5">

    <div class="row">
        <div class="col-12 mb-5">
            <div class="card">

                <div class="pt-2 pb-2">
                    <div class="nav">
                        {{#each navigation.links}}
                        <div class="nav-item">
                            <a href="{{href}}" class="nav-link {{#if @last}} disabled{{/if}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-12 mb-4">

            {{#with header}}
            <h1 class="mb-4">{{title}}</h1>



            {{#with button}}


            <div><button href="#" class="btn btn-outline-secondary mb-4">{{text}}</button>
            </div>

            {{/with}}

            {{/with}}

        </div>
    </div>
    <hr>



    {{> cartgoodsitem goodsBlock=goodsBlock image=image name=name description=description amount=amount
    title=price.title value=price.value buttons=buttons isPrimary=isPrimary isDanger=isDanger text=text}}

    <hr>

    <div class="row">
        <div class="col-12 pt-5 mb-4">
            <div class="card-body">
                {{#with total}}
                <h2 class="mb-2">{{title}}</h2>

                <h1>{{amount}}</h1>
                <h6>{{delivery}}</h6>
                <div class="pt-4">
                    <div class="nav">
                        {{#each buttons}}
                        <div class="nav-item col-12">
                            <p><button href="#" {{#if isSuccess}} class="btn btn-success" {{/if}}{{#if isOutline}}
                                    class="btn btn-outline-success" {{/if}}>{{text}}</button></p>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
    </div>
    <hr>

    <div class="col-12 mb-5">
        {{#with goodsOtherBlock}}
        <h2 class="text-center pt-5 mb-3">{{title}}</h2>
        <div class="row gx-2 gy-4">



            {{#each cards}}
            <div class="col-4">
                <div class="card text-bg-light">

                    <img class="card-img-top" src="{{image}}" alt="{{title}}">

                    <div class="card-body">
                        <h5 class="card-title text-bg-light">{{title}}{{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill text-light text-uppercase m-1">Hot!
                            </span>{{/if}}{{#if idNew}}<span class="badge text-bg-primary rounded-pill m-1">Нове
                            </span>
                            {{/if}}
                        </h5>
                        <p class="text-bg-light">{{description}}</p>

                    </div>
                </div>
            </div>
            {{/each}}

        </div>
        {{/with}}

    </div>
    </div>
    <hr>

    <div class="col-12 mb-5 mt-5">
        <div>
            {{#with subscribe}}


            <div class="alert alert-dark">
                <h2 class="text-light mb-2">{{header}}
                </h2>
                <p class="text-light">{{description}}</p>
                <div class="col-3">
                    <div class="row g-3">
                        {{#each buttons}}
                        <button href="{{link}}" class="btn btn-primary ">{{text}}</button>
                        {{/each}}
                    </div>
                </div>

            </div>
            {{/with}}
        </div>
    </div>
    <hr>

    <div class="col-12">
        <div class="row g-1">


            {{#each footer}}
            <div class="col-2">
                <div class="row g-5">
                    <div class="nav">
                        <div class="nav-item">
                            {{#each this}}

                            <a href="{{link}}" class="nav-link {{#if @last}} disabled{{/if}}">{{text}}</a>

                            {{/each}}


                        </div>



                    </div>
                </div>
            </div>
            {{/each}}


        </div>
    </div>
    <hr>





</main>




