{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<main>
    <div class="card">
        <div class="card-body">
            <div class="card">
                <div class="card-body">
                    {{#with heading}}
                    {{#with main}}
                    <h1>{{title}}</h1>
                    <p class="text-secondary">{{text}}</p>
                    {{#with button_text}}
                    <p><button class="btn btn-primary">{{solid}}</button></p>
                    <p><button class="btn btn-outline-primary">{{outline}}</button></p>
                    {{/with}}
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            <br>

            <div class="card">
                <div class="card-body">
                    {{#with heading}}
                    {{#with second}}
                    <h2>{{title}}</h2>
                    <p class="text-secondary">{{text}}</p>
                    {{#with button_text}}
                    <p><button class="btn btn-secondary">{{solid}}</button></p>
                    <p><button class="btn btn-outline-secondary">{{outline}}</button></p>
                    {{/with}}
                    {{/with}}
                    {{/with}}
                </div>
            </div>
            <br>

            <div class="card">
                <div class="card-body">
                    {{#with heading}}
                    {{#with subblock}}
                    <h3>{{title}}</h3>
                    <p class="text-secondary">{{text}}</p>
                    {{#with button_text}}
                    <p><button class="btn btn-dark">{{solid}}</button></p>
                    <p><button class="btn btn-outline-dark">{{outline}}</button></p>
                    {{/with}}
                    {{/with}}
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>

    <div class="card">
        <div class="card-body">
            {{#with nested_display}}
            <p class="display-1">{{title}}</p>
            <div class="card">
                <div class="card-body">
                    {{#with children_display}}
                    <p class="display-4">{{title}}</p>
                    <p class="text-secondary">{{text}}</p>
                    <p><button class="btn btn-outline-warning">{{button.text}}</button></p>
                    {{/with}}
                </div>
            </div>
            <br>
            <h6>{{header_text}}</h6>
            <p><button class="btn btn-info">{{button.text}}</button></p>
            {{/with}}
        </div>
    </div>
    <br>

    <div class="card">
        <div class="card-body">
            {{#with paragraph}}
            <p class="text-uppercase">{{title}}</p>
            <p class="text-lowercase">{{text}}</p>
            <a href="{{button.url}}" class="btn btn-link">{{button.text}}</a>
            <div class="card">
                <div class="card-body">
                    {{#each list_name}}
                    <ul>
                        <li>
                            <a href="{{url}}" class="btn btn-link">{{text}}</a>
                        </li>
                    </ul>
                    {{/each}}
                </div>
            </div>
            <br>
            {{/with}}
        </div>
    </div>
</main>




