<main class="p-5">

    <div class="row">
        <div class="col-12 mb-5">
            <div class="card">

                <div class="pt-2 pb-2">
                    <div class="nav">
                        {{#each navigation.links}}
                        <div class="nav-item">
                            <a href="{{href}}" {{#if href}}class="nav-link" {{else}}class="nav-link disabled"
                                {{/if}}>{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-12 mb-4">
            <div class="row">
                <div class="col-8">
                    <div class="card-body">
                        {{#with formBlock}}
                        <h1 class="mb-4">{{header}}</h1>
                        {{#with rating}}
                        <h6>{{title}}: {{value}}</h6>
                        {{/with}}
                        <div class="pt-2">
                            <div class="row">
                                <div class="col-12 mb-4 mt-2">

                                    {{#with actionBlock}}

                                    <div class="nav nav-tabs mb-5">

                                        {{#each tabs}}


                                        <div class="nav-item">

                                            <a href="#" {{#if isActive}}class="nav-link active mx-3 px-5"
                                                {{else}}class="nav-link mx-3" {{/if}}>{{text}}</a>


                                        </div>
                                        {{/each}}


                                    </div>
                                    <hr>


                                    <div class=" col-12 mt-5 mb-2">

                                        <div class="card p-3">

                                            {{#with report}}
                                            <h6>{{title}}</h6>
                                            {{#with button}}
                                            <button href="{{link}}" class="btn btn-secondary col-4">{{text}}</button>
                                            {{/with}}
                                            {{/with}}

                                        </div>

                                    </div>
                                    {{/with}}

                                </div>
                            </div>
                        </div>
                        <hr>

                        <div class=" col-12 mt-5 mb-5">
                            <div class="card-body">
                                {{#with feedbackBlock}}
                                <h3>{{title}}</h3>
                                <div class="pt-5">
                                    <div class="nav">
                                        {{#each buttons}}
                                        <div class="nav-item me-3">
                                            <p><button href="{{link}}" {{#if isWarning}} class="btn btn-warning" {{/if}}
                                                    {{#if isSuccess}}class="btn btn-success" {{/if}} {{#if
                                                    isDanger}}class="btn btn-danger" {{/if}}>{{text}}</button></p>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>

                            {{/with}}
                        </div>











                    </div>

                </div>

                <div class="col-4">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <div class="card">
                                {{#with goodsInfo}}
                                <div class="card-item p-3">
                                    <div class="col-6 ">
                                        <img class="card-img-top" src="{{photo}}">

                                    </div>
                                    <p class="card-title pt-3">{{name}}
                                    </p>
                                </div>



                            </div>

                        </div>



                        <div class="col-12 mb-3">
                            <div class="card">

                                <div class="card-item p-3">
                                    <h5>{{price}}</h5>
                                    <div>
                                        {{#if inMarket}} <p>Є в наявності</p>{{/if}}
                                        <div class="nav col-8">

                                            {{#each buttons}}
                                            <div class="nav-item pt-2">

                                                <button href="{{link}}" {{#if isPrimary}} class="btn btn-primary"
                                                    {{/if}} {{#if isSecondary}}class="btn btn-secondary"
                                                    {{/if}}>{{text}}</button>
                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>

                                </div>



                            </div>

                        </div>
                        <div class=" col-12  mb-1">
                            <div class="card">
                                {{#with seller}}
                                <div class="card-item p-2 mt-2">
                                    <h6>{{title}}: {{value}}</h6>
                                </div>
                                {{/with}}
                            </div>

                        </div>

                        {{/with}}
                    </div>


                </div>
                {{/with}}
                <hr>




