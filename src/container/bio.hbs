{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    <div>
        <h1>{{name}}</h1>
    </div>
    <div>
        <p>Birthdate: <em>{{birthdate}}</em></p>
        <address>Birthplace: {{birthplace}}</address>
        <p>Deathdate: <em>{{deathdate}}</em></p>
        <address>Deathplace: {{deathplace}}</address>
        <p>Nationality: <em>{{nationality}}</em></p>
        <p>Occupation: <em>{{occupation}}</em></p>
        <p>Know for: </p>
        {{#each known_for}}
        <ul>
            <li>
                <i>{{this}}</i>
            </li>
        </ul>
        {{/each}}
    </div>
    <br>
    <hr>

    <div>
        <h2>Education:</h2>
    </div>
    {{#each education}}
    <p>Degree: <em>{{degree}} </em></p>
    <p>Field: <em>{{field}}</em></p>
    <p>University: <em>{{institution}}</em></p>
    <p>Year: <em>{{year}}</em></p>
    {{/each}}
    <br>
    <hr>

    <div>
        <h2>Notable publications:</h2>
    </div>
    {{#each notable_publications}}
    <ul>
        <li>
            <p>Title: <i>{{title}}</i></p>
            <p>Year: <em>{{year}}</em></p>
            <p>Publisher: <i>{{publisher}}</i></p>
        </li>
    </ul>
    {{/each}}
    <br>
    <hr>

    <div>
        <h2>Partners:</h2>
    </div>
    {{#each partners}}
    <ul>
        <li>
            <p>Name: <i>{{name}}</i></p>
            <p>Relationship: <em>{{relationship}}</em></p>
            <p>Years: <em>{{years}}</em></p>
        </li>
    </ul>
    {{/each}}
    <br>
    <hr>

    <div>
        <h2>Awards:</h2>
    </div>
    {{#each awards}}
    <p>Title: <i>{{title}} </i></p>
    <p>Year: <em>{{year}}</em></p>
    <p>Description: <em>{{description}}</em></p>
    {{/each}}
    <br>
    <hr>

    <div>
        <h2>Influences:</h2>
    </div>
    {{#each influences}}
    <ul>
        <li>
            <i>{{this}}</i>
        </li>
    </ul>
    {{/each}}
    <br>
    <hr>

    <div>
        <h2>Influenced:</h2>
    </div>
    {{#each influenced}}
    <ul>
        <li>
            <i>{{this}}</i>
        </li>
    </ul>
    {{/each}}
    <br>
    <hr>

    <div>
        <h2>Quotes:</h2>
    </div>
    {{#each quotes}}
    <ul>
        <li>
            <i>{{this}}</i>
        </li>
    </ul>
    {{/each}}
    <br>
    <hr>

    <div>
        <h2>Major discoveriess:</h2>
    </div>
    {{#each major_discoveries}}
    <p>Title: <i>{{title}} </i></p>
    <p>Year: <em>{{year}}</em></p>
    <p>Description: <i>{{description}}</i></p>
    {{/each}}
    <br>
    <hr>

    <div>
        <h2>Contributions:</h2>
    </div>
    {{#each contributions}}
    <p>Title: <i>{{title}} </i></p>
    <p>Description: <i>{{description}}</i></p>
    <p>Year: <em>{{year}}</em></p>
    <p>Field: <i>{{field}} </i></p>
    {{/each}}
    <br>
    <hr>
</div>


